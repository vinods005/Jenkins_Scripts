pipeline {
    agent any

    parameters {        
        choice(choices: ['Dev', 'Prod'], description: 'What environment required?', name: 'Environment')
        choice(choices: ['dev_jenkins_url','prod_jenkins_url'], description: 'Jenkins URL?', name: 'jenkins_url')
        string(defaultValue: "HOSTEDZONEID", description: 'Enter Hosted Zone Details?', name: 'HOSTEDZONEID')
        string(defaultValue: "REGION", description: "Enter Region Here", name: "REGION")
        //choice(choices: 'US-EAST-1\nUS-WEST-2', description: 'What AWS region?', name: 'choiceExample')
        //password(defaultValue: "Password", description: "Password Parameter", name: "passwordExample")
    }
    stages {
        stage("foo") {
            steps {
                echo "stringExample: ${params.HOSTEDZONEID}"
                echo "stringExample: ${params.REGION}"
                echo "choiceExample: ${params.Environment}"
                echo "ChoiceExample: ${params.jenkins_url}"
                //echo "passwordExample: ${params.passwordExample}"
                echo "Workspace Environment: ${WORKSPACE}"
                script{
                sh """
                sudo chmod 777 "${WORKSPACE}/Jenkins_Scripts/jenkins_job.dsl"
                """
                scripts = load "${WORKSPACE}/Jenkins_Scripts/jenkins_job.dsl '${params.HOSTEDZONEID}' '${params.REGION}'"
                scripts.FolderList()
                }
            }
        }
        stage('build') {
            steps {
                echo 'Build stage'
                echo "choiceExample from build stage : ${params.Environment}"
                echo "ChoiceExample from build stage : ${params.jenkins_url}"
                echo "stringExample from build stage : ${params.HOSTEDZONEID}"
                echo "stringExample from build stage   : ${params.REGION}"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy stage'
                echo "choiceExample from deploy stage : ${params.Environment}"
                echo "ChoiceExample from deploy stage : ${params.jenkins_url}"
                echo "stringExample from deploy stage : ${params.HOSTEDZONEID}"
                echo "stringExample from deploy stage   : ${params.REGION}"
            }
        } 
    }
}
